{
  "manifest_version": 3,
  "name": "Text Selector Extension",
  "version": "1.0",
  "permissions": ["contextMenus", "storage", "scripting" , "activeTab"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
